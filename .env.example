# Copy this file to .env and adjust values as needed.

# Image versions
HAPROXY_IMAGE=haproxy:2.4
MARIADB_IMAGE=mariadb:10.5
PHPMYADMIN_IMAGE=phpmyadmin/phpmyadmin

# Cluster core settings
GALERA_CLUSTER_NAME=galera_cluster
MYSQL_ROOT_PASSWORD=change_me
MYSQL_DATABASE=testdb

# HAProxy health check MySQL user settings
# User used only for HAProxy "option mysql-check" (no privileges required)
HAPROXY_HEALTHCHECK_USER=haproxy_check
# Host restriction (avoid '%'). Use the HAProxy container name or network pattern.
# If name resolution inside MariaDB does not map to galera-haproxy, you can use the subnet, e.g. '172.%'
HAPROXY_HEALTHCHECK_HOST=galera-haproxy

# Node names
NODE1_NAME=node1
NODE2_NAME=node2
NODE3_NAME=node3
NODE4_NAME=node4

# Exposed ports (host:container)
HAPROXY_MYSQL_PORT=3306
HAPROXY_STATS_PORT=8080
PHPMYADMIN_HOST_PORT=90
NODE1_HOST_PORT=
NODE2_HOST_PORT=
NODE3_HOST_PORT=
NODE4_HOST_PORT=

# phpMyAdmin
PMA_ARBITRARY=1
UPLOAD_LIMIT=300M
PMA_HOST=haproxy
PMA_PORT=3306

# Resource limits
HAPROXY_CPUS=0.50
HAPROXY_MEMORY=512M
NODE_CPUS=1.00
NODE_MEMORY=1G
PHPMYADMIN_CPUS=0.50
PHPMYADMIN_MEMORY=512M
